    "lint:fix": "tslint --project . --fix",
    "precommit": "npm run lint && npm run build",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waitandseeagency/graphql-sword.git"
  },
  "keywords": [
